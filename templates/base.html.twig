<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('assets/css/menu_burger.css')}}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="mainMenu">
                <input type="checkbox" name="panel" class="hidden" id="panel">
                <label for="panel" class="menuTitle"></label>
                <div class="clear"></div>
                <ul class="menu">
                    <li><a href="{{path('home') }}">Home</a></li>
                    {% if is_granted('ROLE_USER') == false %}
                    <li><a href="{{path('app_register') }}">Enregistrez-vous</a></li>
                    <li><a href="{{path('app_login') }}">Connexion</a></li>
                    {% endif %} 

                    {% if is_granted('ROLE_USER') %}
                    <li><a href="{{path('app_logout') }}">Déconnexion</a></li>
                    {% endif %}

                    <li><a href="{{path('recherche') }}">Recherche</a></li>


                    {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{path('user_index') }}">Utlisateurs</a></li>
                    <li><a href="{{path('vinyl_index') }}">Vinyles</a></li>
                    <li><a href="{{path('categorie_index') }}">Catégories</a></li>
                    <li><a href="{{path('admin') }}">Admin</a></li>
                    {% endif %}

                </ul>
            </header>   






        {% block body %}{% endblock %}
    </body>
</html>
